/* REXX */
/* ROUTINE FOR WRITING OPERATIONAL LOGS */
CALL ISPPRXVP 'I'
IF ISFCALLS('ON') <> 0 THEN EXIT 99
/* LOGDS=ED.SMSTOOL.LOG */
IF OPER = 'ADD' THEN
PHRASE=ADDR VOL SIZE'GB ADDED TO 'GRP' 'DATE(E) TIME()' BY 'USERID()
ELSE
IF OPER = 'DEL' THEN
PHRASE=ADDR VOL ' DELETED FROM 'GRP' 'DATE(E) TIME()' BY 'USERID()
ELSE
IF OPER = 'STA' THEN
IF SYST = '' THEN
PHRASE=DISK 'PENDED 'ST' AT ALL SYSTEMS' DATE(E) TIME()' BY 'USERID()
ELSE
PHRASE=DISK 'PENDED 'ST' AT 'SYST DATE(E) TIME()' BY 'USERID()
"ALLOC DA('"LOGDS"') F(OUTDD) MOD REUSE"
PUSH PHRASE
"EXECIO 1 DISKW OUTDD (FINIS"
"FREE F(OUTDD)"
CALL ISFCALLS 'OFF'
CALL ISPPRXVP 'T'
EXIT 0

/* REXX */
/* ROUTINE FOR WRITING OPERATIONAL LOGS */
CALL ISPPRXVP 'I'
IF ISFCALLS('ON') <> 0 THEN EXIT 99
/* LOGDS=ED.SMSTOOL.LOG */
IF OPER = 'ADD' THEN
PHRASE=ADDR VOL SIZE'GB ADDED TO 'GRP' 'DATE() TIME()' BY 'USERID()
ELSE
IF OPER = 'DEL' THEN
PHRASE=ADDR VOL ' DELETED FROM 'GRP' 'DATE() TIME()' BY 'USERID()
"ALLOC DA('"LOGDS"') F(OUTDD) MOD REUSE"
PUSH PHRASE
"EXECIO 1 DISKW OUTDD (FINIS"
"FREE F(OUTDD)"
CALL ISFCALLS 'OFF'
CALL ISPPRXVP 'T'
EXIT 0
